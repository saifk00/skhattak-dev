---
import Base from '../../layouts/Base.astro';
import { getCollection } from 'astro:content';

const demos = (await getCollection('demos'))
  .filter(d => !d.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---
<Base title="Demos - Saif Khattak">
  <main class="listing-page">
    <header class="page-head">
      <h1>demos</h1>
      <p class="intro">
        Interactive experiments in React, JavaScript, graphics, and eventually
        WASM.
      </p>
    </header>
    <ul class="demo-list">
      {demos.map(demo => {
        const slug = demo.id.includes('/') ? demo.id.split('/')[0] : demo.id;
        return (
          <li>
            <a href={`/demos/${slug}/`}>
              <span class="item-title">{demo.data.title}</span>
              <span class="item-date">
                {demo.data.date.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric',
                })}
              </span>
            </a>
            {demo.data.subtitle && <p class="item-subtitle">{demo.data.subtitle}</p>}
          </li>
        );
      })}
    </ul>
  </main>
</Base>

<style>
  .listing-page {
    max-width: 1060px;
    margin: 0 auto;
    padding: 24px 24px 80px;
    display: grid;
    gap: 16px;
  }

  .page-head {
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    background: linear-gradient(180deg, rgba(17, 24, 37, 0.9), rgba(12, 18, 29, 0.93));
    box-shadow: var(--shadow-panel);
    padding: 20px;
  }

  .page-head h1 {
    font-size: clamp(1.6rem, 3.8vw, 2.2rem);
    margin-bottom: 8px;
  }

  .page-head .intro {
    color: var(--text-muted);
    max-width: 620px;
  }

  .demo-list {
    list-style: none;
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    background: linear-gradient(180deg, rgba(13, 19, 31, 0.93), rgba(10, 15, 25, 0.93));
    box-shadow: var(--shadow-panel);
  }

  .demo-list li {
    border-bottom: 1px solid var(--border-soft);
    padding: 16px 18px;
  }

  .demo-list li:last-child {
    border-bottom: 0;
  }

  .demo-list a {
    display: flex;
    justify-content: space-between;
    gap: 16px;
    color: var(--text);
    text-decoration: none;
    transition: color 0.15s ease;
  }

  .demo-list a:hover {
    color: #f2f7ff;
  }

  .demo-list .item-title {
    font-weight: 500;
  }

  .demo-list .item-date {
    color: var(--text-muted);
    font-size: 0.76rem;
    font-family: var(--font-mono);
    white-space: nowrap;
  }

  .demo-list .item-subtitle {
    color: var(--text-muted);
    margin-top: 6px;
    font-size: 0.95em;
  }

  @media (max-width: 720px) {
    .listing-page {
      padding: 16px 12px 60px;
    }
  }
</style>
