---
import Base from '../../layouts/Base.astro';
import { getCollection } from 'astro:content';

const demos = (await getCollection('demos'))
  .filter(d => !d.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---
<Base title="Demos - Saif Khattak">
  <main class="listing-page">
    <h1>demos</h1>
    <p class="intro">
      Interactive experiments in React, JavaScript, graphics, and eventually
      WASM.
    </p>
    <ul>
      {demos.map(demo => {
        const slug = demo.id.includes('/') ? demo.id.split('/')[0] : demo.id;
        return (
          <li>
            <a href={`/demos/${slug}/`}>
              <span class="item-title">{demo.data.title}</span>
              <span class="item-date">
                {demo.data.date.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric',
                })}
              </span>
            </a>
            {demo.data.subtitle && <p class="item-subtitle">{demo.data.subtitle}</p>}
          </li>
        );
      })}
    </ul>
  </main>
</Base>

<style>
  .listing-page {
    max-width: 780px;
    margin: 0 auto;
    padding: 60px 24px 80px;
  }

  .listing-page h1 {
    font-size: 1.8em;
    font-weight: 700;
    margin-bottom: 10px;
  }

  .listing-page .intro {
    color: var(--text-muted);
    margin-bottom: 24px;
    max-width: 620px;
  }

  .listing-page ul {
    list-style: none;
  }

  .listing-page li {
    border-bottom: 1px solid var(--border);
    padding: 16px 0;
  }

  .listing-page a {
    display: flex;
    justify-content: space-between;
    gap: 16px;
    color: var(--text);
    text-decoration: none;
    transition: color 0.15s;
  }

  .listing-page a:hover {
    color: var(--accent);
  }

  .listing-page .item-title {
    font-weight: 500;
  }

  .listing-page .item-date {
    color: var(--text-muted);
    font-size: 0.85em;
    white-space: nowrap;
  }

  .listing-page .item-subtitle {
    color: var(--text-muted);
    margin-top: 6px;
    font-size: 0.95em;
  }
</style>
