---
import Base from '../layouts/Base.astro';
import { getCollection } from 'astro:content';
import LetterboxdRecent from '../components/LetterboxdRecent.tsx';

const posts = (await getCollection('posts'))
  .filter(p => !p.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---
<Base title="Saif Khattak">
  <main class="home">
    <section class="intro">
      <img
        class="intro-eye"
        alt="Eyes of Corporate Insight"
        src="/insight.png"
        width="100"
        height="100"
      />
      <h1>About Me</h1>
      <p>
        Hello. My name is Saif Khattak (Pashto خټک‎, IPA: xaˈʈak). I like birds, compilers, and caffeine. The image above is the item <b>Eyes of Corporate Insight</b> from the game
        <a
          href="https://store.steampowered.com/app/1388770/Cruelty_Squad/"
          target="_blank"
          rel="noopener noreferrer"
        >
          Cruelty Squad
        </a>.
      </p>
    </section>
    <section class="recent">
      <h2>recent posts</h2>
      <ul>
        {posts.map(post => {
          const slug = post.id.includes('/') ? post.id.split('/')[0] : post.id;
          return (
          <li>
            <a href={`/posts/${slug}/`}>
              <span class="post-title">{post.data.title}</span>
              <span class="post-date">
                {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short' })}
              </span>
            </a>
          </li>
          );
        })}
      </ul>
    </section>
    <LetterboxdRecent client:load />
    <noscript>
      <p class="letterboxd-fallback">
        Recent watches: <a href="https://letterboxd.com/xiphosen/">letterboxd.com/xiphosen</a>
      </p>
    </noscript>
  </main>
</Base>

<style>
  .home {
    max-width: 780px;
    margin: 0 auto;
    padding: 0 24px;
  }
  .intro {
    padding: 80px 0 48px;
  }
  .intro .intro-eye {
    display: block;
    margin-right: auto;
    margin-bottom: 6px;
    border-radius: 6px;
  }
  .intro h1 {
    font-size: 1.8em;
    font-weight: 700;
    margin-bottom: 12px;
  }
  .intro p {
    color: var(--text-muted);
    font-size: 1.1em;
    max-width: 720px;
  }
  .recent {
    padding-bottom: 20px;
  }
  .recent h2 {
    font-size: 1em;
    font-weight: 600;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 16px;
  }
  .recent ul { list-style: none; }
  .recent li {
    border-bottom: 1px solid var(--border);
  }
  .recent a {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 0;
    color: var(--text);
    text-decoration: none;
    transition: color 0.15s;
  }
  .recent a:hover { color: var(--accent); }
  .post-title { font-weight: 500; }
  .post-date {
    color: var(--text-muted);
    font-size: 0.85em;
    white-space: nowrap;
    margin-left: 16px;
  }
  .letterboxd-fallback {
    color: var(--text-muted);
    padding-bottom: 70px;
  }
</style>
