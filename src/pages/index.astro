---
import Base from '../layouts/Base.astro';
import { getCollection } from 'astro:content';
import LetterboxdRecent from '../components/LetterboxdRecent.tsx';
import FlickrRecent from '../components/FlickrRecent.tsx';

const posts = (await getCollection('posts'))
  .filter(p => !p.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
const projects = (await getCollection('projects')).filter(p => !p.data.draft);
const demos = (await getCollection('demos')).filter(d => !d.data.draft);
---
<Base title="Saif Khattak">
  <main class="home">
    <section class="hero-grid">
      <section class="hero-intro panel">
        <h1>About Me</h1>
        <p>
          Hello. My name is Saif Khattak (Pashto خټک‎, IPA: xaˈʈak). I like birds, compilers, and caffeine.
        </p>
      </section>

      <aside class="hero-artifact panel">
        <img
          class="intro-eye"
          alt="Eyes of Corporate Insight"
          src="/insight.png"
          width="120"
          height="120"
        />
        <p>
          <b>Eyes of Corporate Insight</b> from
          <a
            href="https://store.steampowered.com/app/1388770/Cruelty_Squad/"
            target="_blank"
            rel="noopener noreferrer"
          >
            Cruelty Squad
          </a>.
        </p>
        <div class="hero-stats" aria-label="site stats">
          <div class="hero-stat"><span>posts</span><b>{posts.length}</b></div>
          <div class="hero-stat"><span>projects</span><b>{projects.length}</b></div>
          <div class="hero-stat"><span>demos</span><b>{demos.length}</b></div>
        </div>
      </aside>
    </section>

    <section class="recent panel">
      <div class="recent-head">
        <h2>recent posts</h2>
      </div>
      <ul class="recent-grid">
        {posts.map(post => {
          const slug = post.id.includes('/') ? post.id.split('/')[0] : post.id;
          return (
            <li>
              <a href={`/posts/${slug}/`}>
                <span class="post-title">{post.data.title}</span>
                <span class="post-date">
                  {post.data.date.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                  })}
                </span>
              </a>
            </li>
          );
        })}
      </ul>
    </section>

    <section class="media-grid">
      <section class="watch-panel panel">
        <LetterboxdRecent client:load />
      </section>
      <section class="photo-panel panel">
        <FlickrRecent client:load />
      </section>
    </section>

    <noscript>
      <p class="letterboxd-fallback panel">
        Recent watches: <a href="https://letterboxd.com/xiphosen/">letterboxd.com/xiphosen</a>
      </p>
      <p class="letterboxd-fallback panel">
        Recent photos: <a href="https://flickr.com/photos/198040252@N06/">flickr.com/photos/198040252@N06</a>
      </p>
    </noscript>
  </main>
</Base>

<style>
  .home {
    max-width: 1060px;
    margin: 0 auto;
    padding: 24px 24px 80px;
    display: grid;
    gap: 20px;
  }

  .panel {
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    background:
      linear-gradient(180deg, rgba(17, 24, 37, 0.9), rgba(13, 18, 30, 0.92));
    box-shadow: var(--shadow-panel);
  }

  .hero-grid {
    display: grid;
    grid-template-columns: minmax(0, 1.6fr) minmax(260px, 0.85fr);
    gap: 18px;
  }

    .hero-intro {
      padding: 22px;
      min-height: 260px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      gap: 10px;
    }

    .hero-intro h1 {
      font-size: clamp(1.8rem, 4.5vw, 2.8rem);
      margin: 0;
      margin-bottom: 8px;
      line-height: 1.1;
      color: #f0f5ff;
    }

    .hero-intro p {
      margin: 0;
      color: var(--text-muted);
      max-width: 64ch;
    }

    .hero-artifact {
      padding: 18px;
      text-align: center;
    }

  .hero-artifact .intro-eye {
    display: block;
    margin: 0 auto 12px;
    border-radius: 10px;
    border: 1px solid var(--border);
    width: 124px;
    height: auto;
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.35);
  }

  .hero-artifact p {
    color: var(--text-muted);
    font-size: 0.9rem;
    line-height: 1.45;
  }

  .hero-stats {
    margin-top: 14px;
    display: grid;
    gap: 8px;
  }

  .hero-stat {
    border: 1px solid var(--border-soft);
    border-radius: 9px;
    background: color-mix(in srgb, var(--bg) 75%, transparent);
    padding: 8px 10px;
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 12px;
    font-family: var(--font-mono);
  }

  .hero-stat span {
    font-size: 0.72rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--text-muted);
  }

  .hero-stat b {
    font-size: 0.95rem;
    color: #ecf4ff;
  }

  .recent {
    padding: 18px;
  }

  .recent .recent-head {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 12px;
    margin-bottom: 12px;
  }

  .recent h2 {
    font-family: var(--font-mono);
    font-size: 0.78rem;
    font-weight: 600;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0;
  }

  .recent-grid {
    list-style: none;
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 10px;
  }

  .recent-grid li {
    margin: 0;
  }

  .recent-grid a {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 12px;
    padding: 12px;
    border-radius: 10px;
    border: 1px solid var(--border-soft);
    color: #e7eefc;
    background: color-mix(in srgb, var(--bg) 78%, transparent);
    text-decoration: none;
    transition: transform 0.15s ease, border-color 0.15s ease, background-color 0.15s ease;
  }

  .recent-grid a:hover {
    transform: translateY(-2px);
    color: #f5f8ff;
    border-color: color-mix(in srgb, var(--accent) 58%, var(--border));
    background: color-mix(in srgb, var(--accent) 10%, transparent);
  }

  .post-title {
    font-weight: 600;
    line-height: 1.35;
  }

  .post-date {
    color: var(--text-muted);
    font-size: 0.75rem;
    font-family: var(--font-mono);
    white-space: nowrap;
    margin-left: 8px;
  }

  .media-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 20px;
    align-items: start;
  }

  .watch-panel {
    padding: 0 18px 0;
  }

  .photo-panel {
    padding: 0 18px 0;
  }

  .letterboxd-fallback {
    color: var(--text-muted);
    padding: 18px;
  }

  @media (max-width: 980px) {
    .media-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 900px) {
    .hero-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 720px) {
    .home {
      padding: 16px 12px 60px;
    }

    .recent-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
