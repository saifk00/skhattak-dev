---
import Base from '../../layouts/Base.astro';
import { getCollection } from 'astro:content';

const projects = (await getCollection('projects'))
  .filter(p => !p.data.draft)
  .sort((a, b) => {
    const aDate = a.data.date?.valueOf() ?? 0;
    const bDate = b.data.date?.valueOf() ?? 0;
    if (aDate !== bDate) return bDate - aDate;
    return a.data.title.localeCompare(b.data.title);
  });
---
<Base title="Projects - Saif Khattak">
  <main class="listing-page">
    <h1>projects</h1>
    <p class="intro">
      Personal and academic work across systems programming, graphics, emulation,
      signal processing, and astronomy imaging.
    </p>
    <ul>
      {projects.map(project => {
        const slug = project.id.includes('/') ? project.id.split('/')[0] : project.id;
        return (
          <li>
            <a href={`/projects/${slug}/`}>
              <span class="item-title">{project.data.title}</span>
              <span class="item-date">
                {project.data.date
                  ? project.data.date.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'short',
                    })
                  : 'project'}
              </span>
            </a>
            {project.data.subtitle && <p class="item-subtitle">{project.data.subtitle}</p>}
          </li>
        );
      })}
    </ul>
  </main>
</Base>

<style>
  .listing-page {
    max-width: 780px;
    margin: 0 auto;
    padding: 60px 24px 80px;
  }

  .listing-page h1 {
    font-size: 1.8em;
    font-weight: 700;
    margin-bottom: 10px;
  }

  .listing-page .intro {
    color: var(--text-muted);
    margin-bottom: 24px;
    max-width: 620px;
  }

  .listing-page ul {
    list-style: none;
  }

  .listing-page li {
    border-bottom: 1px solid var(--border);
    padding: 16px 0;
  }

  .listing-page a {
    display: flex;
    justify-content: space-between;
    gap: 16px;
    color: var(--text);
    text-decoration: none;
    transition: color 0.15s;
  }

  .listing-page a:hover {
    color: var(--accent);
  }

  .listing-page .item-title {
    font-weight: 500;
  }

  .listing-page .item-date {
    color: var(--text-muted);
    font-size: 0.85em;
    white-space: nowrap;
  }

  .listing-page .item-subtitle {
    color: var(--text-muted);
    margin-top: 6px;
    font-size: 0.95em;
  }
</style>
