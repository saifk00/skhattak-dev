---
import Base from './Base.astro';

interface ExternalLink {
  href: string;
  label: string;
}

interface Props {
  title: string;
  subtitle?: string;
  date?: Date;
  section?: string;
  external?: ExternalLink;
}

const { title, subtitle, date, section, external } = Astro.props;
const dateStr = date
  ? date.toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'long',
      day: 'numeric',
    })
  : null;
---
<Base title={title}>
  <div class="entry-wrap">
    <article class="entry">
      <header class="entry-hero">
        {section && <p class="kicker">{section}</p>}
        <h1>{title}</h1>
        {subtitle && <p class="subtitle">{subtitle}</p>}
        {(dateStr || external) && (
          <p class="meta">
            {dateStr && <span>{dateStr}</span>}
            {dateStr && external && <span class="meta-sep">Â·</span>}
            {external && (
              <a href={external.href} target="_blank" rel="noopener noreferrer">
                {external.label}
              </a>
            )}
          </p>
        )}
      </header>
      <div class="entry-body">
        <slot />
      </div>
    </article>
  </div>
</Base>

<style is:global>
  .entry-wrap {
    max-width: 1060px;
    margin: 0 auto;
    padding: 18px 24px 80px;
  }

  .entry {
    max-width: 920px;
    margin: 0 auto;
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    background:
      linear-gradient(180deg, rgba(17, 24, 38, 0.94), rgba(12, 17, 29, 0.95));
    box-shadow: var(--shadow-panel);
    overflow: hidden;
  }

  .entry-hero {
    text-align: left;
    padding: 30px 28px 22px;
    border-bottom: 1px solid var(--border-soft);
    margin-bottom: 0;
  }

  .entry-hero .kicker {
    font-family: var(--font-mono);
    font-size: 0.72rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--gold);
    margin-bottom: 9px;
  }

  .entry-hero h1 {
    font-size: clamp(1.6rem, 4vw, 2.4rem);
    font-weight: 700;
    line-height: 1.16;
    margin-bottom: 10px;
    color: #eef4ff;
    text-wrap: balance;
  }

  .entry-hero .subtitle {
    color: var(--text-muted);
    font-size: 1.02rem;
    max-width: 72ch;
  }

  .entry-hero .meta {
    margin-top: 14px;
    color: var(--text-faint);
    font-size: 0.75rem;
    font-family: var(--font-mono);
    letter-spacing: 0.03em;
  }

  .entry-hero .meta a {
    color: var(--gold);
    text-decoration: none;
  }

  .entry-hero .meta a:hover {
    text-decoration: underline;
  }

  .entry-hero .meta-sep {
    margin: 0 8px;
  }

  .entry-body {
    padding: 0 28px 30px;
  }

  .entry-body p {
    margin: 12px 0;
  }

  .entry-body h2 {
    font-size: 1.35em;
    font-weight: 600;
    margin: 40px 0 18px;
    padding-bottom: 8px;
    border-bottom: 1px solid color-mix(in srgb, var(--gold) 55%, var(--border));
  }

  .entry-body h3 {
    font-size: 1.2em;
    font-weight: 600;
    margin: 30px 0 10px;
    color: var(--accent);
  }

  .entry-body pre {
    background: color-mix(in srgb, var(--surface) 78%, #070d19);
    border: 1px solid var(--border-soft);
    border-radius: 8px;
    padding: 16px 20px;
    overflow-x: auto;
    font-size: 0.88em;
    line-height: 1.55;
    margin: 16px 0;
  }

  .entry-body code {
    font-family: 'SF Mono', 'Fira Code', 'Cascadia Code', monospace;
  }

  .entry-body :not(pre) > code {
    background: color-mix(in srgb, var(--surface) 70%, #070d19);
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 0.9em;
    color: var(--green);
  }

  .entry-body ul,
  .entry-body ol {
    margin: 12px 0 12px 24px;
  }

  .entry-body li {
    margin: 6px 0;
  }

  .entry-body img,
  .entry-body video {
    max-width: 100%;
    height: auto;
    display: block;
    margin: 16px auto;
    border-radius: 8px;
    border: 1px solid var(--border-soft);
  }

  .entry-body iframe {
    max-width: 100%;
    display: block;
    margin: 16px auto;
    border-radius: 8px;
    border: 1px solid var(--border-soft);
  }

  @media (max-width: 600px) {
    .entry-wrap {
      padding: 12px 12px 60px;
    }

    .entry-hero {
      padding: 20px 16px 16px;
    }

    .entry-body {
      padding: 0 16px 18px;
    }

    .entry-hero h1 {
      font-size: 1.6em;
    }
  }
</style>
