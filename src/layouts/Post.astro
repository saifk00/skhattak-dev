---
import Base from './Base.astro';

interface Props {
  title: string;
  subtitle?: string;
  date: Date;
}

const { title, subtitle, date } = Astro.props;
const dateStr = date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
---
<Base title={title}>
  <article class="post">
    <header class="post-hero">
      <h1>{title}</h1>
      {subtitle && <p class="subtitle">{subtitle}</p>}
      <p class="meta">Saif Khattak · {dateStr}</p>
    </header>
    <div class="post-body">
      <slot />
    </div>
  </article>
</Base>

<style is:global>
  .post {
    max-width: 780px;
    margin: 0 auto;
    padding: 0 24px 80px;
  }

  .post-hero {
    text-align: center;
    padding: 60px 0 40px;
    border-bottom: 1px solid var(--border);
    margin-bottom: 48px;
  }
  .post-hero h1 {
    font-size: 2.2em;
    font-weight: 700;
    line-height: 1.25;
    margin-bottom: 16px;
    background: linear-gradient(135deg, var(--accent), var(--green));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  .post-hero .subtitle {
    color: var(--text-muted);
    font-size: 1.1em;
    max-width: 600px;
    margin: 0 auto;
  }
  .post-hero .meta {
    margin-top: 20px;
    color: var(--text-muted);
    font-size: 0.85em;
  }

  /* Prose */
  .post-body p { margin: 12px 0; }

  .post-body h2 {
    font-size: 1.5em;
    font-weight: 600;
    margin: 56px 0 24px;
    padding-bottom: 8px;
    border-bottom: 2px solid var(--accent-dim);
  }
  .post-body h3 {
    font-size: 1.2em;
    font-weight: 600;
    margin: 36px 0 12px;
    color: var(--accent);
  }

  /* Code */
  .post-body pre {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 16px 20px;
    overflow-x: auto;
    font-size: 0.88em;
    line-height: 1.55;
    margin: 16px 0;
  }
  .post-body code {
    font-family: 'SF Mono', 'Fira Code', 'Cascadia Code', monospace;
  }
  .post-body :not(pre) > code {
    background: var(--surface);
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 0.9em;
    color: var(--green);
  }

  /* Tables */
  .post-body table {
    width: 100%;
    border-collapse: collapse;
    margin: 20px 0;
    font-size: 0.92em;
  }
  .post-body th, .post-body td {
    padding: 10px 14px;
    text-align: left;
    border: 1px solid var(--border);
  }
  .post-body th {
    background: var(--surface);
    font-weight: 600;
    color: var(--accent);
  }
  .post-body td { background: var(--bg); }

  /* Lists */
  .post-body ul, .post-body ol {
    margin: 12px 0 12px 24px;
  }
  .post-body li { margin: 6px 0; }

  /* Images */
  .post-body img {
    max-width: 100%;
    border-radius: 8px;
    border: 1px solid var(--border);
  }

  /* Callouts — use blockquotes with bold first line */
  .post-body blockquote {
    background: var(--surface);
    border-left: 3px solid var(--accent);
    border-radius: 0 8px 8px 0;
    padding: 16px 20px;
    margin: 20px 0;
    font-size: 0.95em;
  }
  .post-body blockquote p { margin: 0; }

  /* Diagrams — use fenced code with 'diagram' language */
  .post-body pre.diagram,
  .post-body .diagram pre {
    color: var(--text-muted);
    white-space: pre;
    font-size: 0.85em;
    line-height: 1.5;
  }

  /* Interactive component containers */
  .post-body .demo {
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 24px;
    margin: 24px 0;
    background: var(--surface);
  }

  /* Footer */
  .post-body .footer {
    margin-top: 64px;
    padding-top: 24px;
    border-top: 1px solid var(--border);
    color: var(--text-muted);
    font-size: 0.85em;
    text-align: center;
  }

  /* Responsive */
  @media (max-width: 600px) {
    .post-hero h1 { font-size: 1.6em; }
    .post-body pre { font-size: 0.8em; padding: 12px 14px; }
  }
</style>
